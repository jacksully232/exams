import random
choice=input("please enter rock , paper or scissors")#(i)
print("plaer choose",choice,)
computer_options = ["rock", "paper", "scissors"]

computerchoice = computer_options [random.randint(0,2)]
print("computer choose",computerchoice,)
if choice == ("rock") and computerchoice ==("paper"):
    print("player lose")
elif choice == ("rock") and computerchoice ==("rock"):
    print("its a draw")
elif choice == ("rock") and computerchoice ==("scissors"):
    print("you win")  
elif choice == ("scissors") and computerchoice ==("paper"):
    print("you win")
elif choice == ("scissors") and computerchoice ==("scissors"):
    print("its a draw")
elif choice == ("scissors") and computerchoice ==("rock"):
    print("you lose")
elif choice == ("paper") and computerchoice ==("paper"):
    print("its a draw")
elif choice == ("paper") and computerchoice ==("scissors"):
    print("you lose")
elif choice == ("paper") and computerchoice ==("rock"):
    ("you win")



